
// See https://github.com/julia-vscode/julia-devcontainer/blob/master/Dockerfile for image contents
{
	"name": "Genie",

	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"julialang.language-julia",
				"geniebuilder.geniebuilder"

			]
		}
	},
"features": {
    "ghcr.io/julialang/devcontainer-features/julia:1": {}
},
	"postStartCommand": "mkdir -p ~/.julia/geniebuilder/apps",
	"postStartCommand": "ln -s app/EDA/ ~/.julia/geniebuilder/EDA",
	"postStartCommand": "ln -s app/ML/ ~/.julia/geniebuilder/ML",
	"forwardPorts": [8000]
}
